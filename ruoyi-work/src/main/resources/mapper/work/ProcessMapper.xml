<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.work.mapper.ProcessMapper">

    <resultMap type="com.ruoyi.work.domain.TProcess" id="ProcessResult">
        <result property="id" column="id"/>
        <result property="createTime" column="create_time"/>
        <result property="name" column="name"/>
        <result property="processKey" column="process_key"/>
        <result property="step" column="step"/>
        <result property="type" column="`type`"/>
        <result property="checkType" column="check_type"/>
        <result property="processCheck" column="process_check"/>
        <result property="cc" column="cc"/>
        <result property="isNext" column="is_next"/>
        <result property="audit" column="audit"/>
        <result property="ruleId" column="rule_id"/>
        <result property="param" column="param"/>
        <result property="timeout" column="timeout"/>
        <result property="paramName" column="param_name"/>
        <result property="description" column="description"/>

    </resultMap>
    <update id="updateCommonByBusinessId">
        update ${bean}
        <set>
            <if test="processStatus != null and processStatus != ''">process_status = #{processStatus},</if>
            pass_time =now(),
            <if test="step != null and step != ''">step = #{step}</if>
        </set>
         where id = #{businessId}
    </update>


</mapper>
